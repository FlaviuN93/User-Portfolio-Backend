extends baseEmail

block content
  h5 Hi #{fullName},
  p Forgot your password? Enter this link that will send you to reset your password:
  p This password reset link will expire after &nbsp;
  span.strong 20 minutes.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you didin't forget your password, please ignore this email!